@model Post

@{
	ViewData["Title"] = "Delete Post";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


<div class="content-wrapper my-4">
	<h2>@ViewData["Title"]</h2>

<h4>Do you want to delete this Blog?</h4>
<hr />

	<h1 class="mt-2">@Model.Title</h1>
	<p><span class="badge bg-info">By:</span> @Model.Author | <span class="badge bg-info">Published on</span> @Model.PublishedDate.ToString("MMM dd, yyyy")</p>
	<p><span class="badge bg-primary disabled">Category</span> @Model.Category.Name </p>
	<img src="@Model.FeatureImagePath" alt="@Model.Title" class="feature-image"  />
	<hr style="border-color: black;">
	<div>@Html.Raw(Model.Content)</div>
	<hr class="visible-hr"/>


	<form asp-action="Delete" asp-controller="Post" >
	<input type="hidden" asp-for="@Model.Id"/>
	<button type="submit" class="btn btn-outline-primary mt-2"><i class="fa-solid fa-trash"></i> Delete</button>
	<a asp-action="Details" asp-controller="Post" asp-route-id="@Model.Id" class="btn btn-outline-info mt-2">Cancel</a>
</form>
</div>


