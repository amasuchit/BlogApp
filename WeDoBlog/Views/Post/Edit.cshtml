@model EditViewModel
@{
	ViewData["Title"] = "Edit Post";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


<div class="content-wrapper">
	<div class="row">
	<div class="col-6">
		<h1>Edit your Post</h1>
	</div>
	<div class="col-6 text-end">
		<a class="btn btn-outline-primary" asp-action="Index" asp-controller="Post" ><i class="fa-solid fa-circle-arrow-left"></i> Back To List</a>
	</div>
</div>
<hr />

<form asp-action="Edit" asp-controller="Post" method="Post" enctype="multipart/form-data">
	<div class="validation-summary text-danger"asp-validation-summary="All">

	</div>

	<input asp-for="Post.Id" type="hidden" />
	<div class="form-class mt-3">
		<label asp-for="Post.Title" class="fw-bold"></label>
		<input asp-for="Post.Title" class="form-control"/>
		<span asp-validation-for="Post.Title" class="text-danger"></span>
	</div>

	<div class="form-class mt-3">
		<label asp-for="Post.CategoryId" class="fw-bold">Category</label>
		<select asp-for="Post.CategoryId" asp-items="Model.Categories" class="form-control">
			<option value="">Select Category</option>
		</select>
		<span asp-validation-for="Post.CategoryId" class="text-danger"></span>
	</div>

	<div class="form-class mt-3">
		<label asp-for="Post.Author" class="fw-bold"></label>
		<input asp-for="Post.Author" class="form-control"/>
		<span asp-validation-for="Post.Author" class="text-danger"></span>
	</div>

	<div class="form-class mt-3">
		<label asp-for="Post.Content" class="fw-bold"></label>
		<textarea asp-for="Post.Content" class="form-control" rows="5"></textarea>
		<span asp-validation-for="Post.Content" class="text-danger"></span>
	</div>

	<div class="form-class mt-3">
		<label asp-for="FeatureImage" class="fw-bold"></label>
		<input asp-for="FeatureImage" type="file" class="form-control" />
	</div>
	<button type="submit" class="btn btn-outline-primary mt-3"><i class="fa-solid fa-floppy-disk"></i> Save</button>
	<a class="btn btn-outline-info mt-3" asp-action="Index" asp-controller="Post">Back To List</a>
</form>
</div>



@section Scripts {
				<script src="https://cdn.tiny.cloud/1/qdwmd97ye8e2xdxrpdm3kdu3ms9qtrw514mu3f8ljsykdgg4/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
				<script>
						tinymce.init({
							selector: 'textarea',

						});
				</script>
		}