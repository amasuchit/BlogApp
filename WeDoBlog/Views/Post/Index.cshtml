@using WeDoBlog.Helpers
@model IEnumerable<Post>
@{
	ViewData["Title"] = "Blog Posts";
}


<div class="text-center m-3">
	@{
		if (ViewBag.Categories != null)
		{
			foreach (var category in ViewBag.Categories)
			{
							<a asp-action="Index" asp-controller="Post" asp-route-categoryId="@category.Id" class="badge bg-warning text-decoration-none ms-2">@category.Name</a>
			}
		}
	}
</div>

<div class="text-end">
	<a class="btn btn-outline-primary btn-sm my-2" asp-action="Create" asp-controller="Post">Create New Post</a>
</div>


<div class="row row-cols-3 g-4">
	@foreach (var post in Model)
	{
			<div class="col">
				<div class="card h-100 border-0 shadow-lg rounded-1">
							<img src="@post.FeatureImagePath" 
							class="card-img-top" 
							alt="@post.Title" 
							style="height:300px;object-fit:cover" />

							<div class="card-body">
								<h5 class="card-title">@post.Title</h5>
								<p class="text-muted mb-2">Published on @post.PublishedDate.ToString("MMM dd, yyyy")</p>

					@{

						var content = RemoveHtmlTagHelper.RemoveHtmlTags(post.Content);

					}

								<p class="card-text">
						@(content.Length > 90 ? content.Substring(0, 90) + "..." : content)
								</p>


								<span class="badge bg-secondary">@post.Category?.Name</span>
							</div>

							<div class="card-footer d-flex justify-content-between align-item-center">
								<a class="btn btn-info btn-sm" asp-action="Details" asp-controller="Post" asp-route-id="@post.Id">Read More</a>
								<div class="text-end">
									<div class="text-muted">
										By @post.Author
									</div>
								</div>
							</div>


				</div>

			</div>
	}



</div>