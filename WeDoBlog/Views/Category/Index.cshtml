@model IEnumerable<Category>


@{
	ViewData["Title"] = "Categories";
}

<div class="content-wrapper">
	<div class="row my-4">
		<div class="col-6">
			<h1>@ViewData["Title"]</h1>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-outline-primary my-2" asp-action="Create" asp-controller="Category"><i class="fa-solid fa-plus"></i> Create Category</a>
		</div>
	</div>
	<div class="my-4">
		<table class="table table-striped table-hover">
			<thead class="table-success">
			<tr>
				<th>Category Name</th>
				<th>Description</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
				@foreach (var category in Model)
				{
						<tr>
							<td>@category.Name</td>
							<td>@category.Description</td>
							<td>
									<a asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-outline-info btn-sm">Edit  <i class="fa-solid fa-pen-to-square"></i></a>
									<a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-outline-danger btn-sm">Delete <i class="fa-solid fa-trash"></i></a>
							</td>
						</tr>
				}
		</tbody>
		</table>
		
	</div>
</div>