@model CategoryViewModel
@{
	ViewData["Title"] = "Create Category";
}





<div class="content-wrapper">
	<div class="row my-4">
	<div class="col-6">
		<h1>@ViewData["Title"]</h1>
	</div>
	<div class="col-6 text-end">
		<a class="btn btn-outline-primary" asp-action="Index" asp-controller="Post"><i class="fa-solid fa-circle-arrow-left"></i> Back To List</a>
	</div>
</div>
<hr />

<form asp-action="Create" asp-controller="Category" method="Post">
	<div class="form-class mt-3">
		<label asp-for="@Model.Name" class="fw-bold"></label>
		<input type="text" asp-for="@Model.Name" class="form-control" />
		<span asp-validation-for="@Model.Name" class="text-danger"></span>
	</div>

	<div class="form-class mt-3">
		<label asp-for="@Model.Description" class="fw-bold"></label>
		<input type="text" asp-for="@Model.Description" class="form-control" />
		<span asp-validation-for="@Model.Description" class="text-danger"></span>
	</div>
	<div class="form-class mt-3">
		<button type="submit" asp-action="Create" asp-controller="Category" class="btn btn-outline-info">Create </button>
		<button type="submit" asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary">Cancel</button>
	</div>

</form></div>
