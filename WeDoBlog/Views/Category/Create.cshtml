@model CategoryViewModel
@{
	ViewData["Title"] = "Create Category";
}
<div>
<form asp-action="Create" asp-controller="Category" method="Post">
	<div class="form-class mt-3">
		<label asp-for="Category.Name" class="fw-bold"></label>
		<input type="text" asp-for="Category.Name" class="form-control" />
		<span asp-validation-for="Category.Name" class="text-danger"></span>
	</div>

	<div class="form-class mt-3">
		<label asp-for="Category.Description" class="fw-bold"></label>
		<input type="text" asp-for="Category.Description" class="form-control" />
		<span asp-validation-for="Category.Description" class="text-danger"></span>
	</div>
	<div class="form-class mt-3">
		<button type="submit" asp-action="Create" asp-controller="Category" class="btn btn-outline-info">Create </button>
		<button type="submit" asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary">Cancel</button>
	</div>

</form>
</div>
